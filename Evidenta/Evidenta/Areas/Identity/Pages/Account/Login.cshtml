@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<!-- Carousel start -->
<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="first-slide" src="~/css/img/carousel_1.png" alt="First slide">
            <div class="container">
                <div class="carousel-caption">
                    <h1>Upload Your Projects</h1>
                </div>
            </div>
        </div>
        <div class="carousel-item ">
            <img class="second-slide" src="~/css/img/carousel_2.jpg" alt="Second slide">
            <div class="container">
                <div class="carousel-caption">
                    <h1>Check Your Results</h1>
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <img class="third-slide" src="~/css/img/carousel_3.jpeg"alt="Third slide">
            <div class="container">
                <div class="carousel-caption">
                    <h1>Simple, Fast & Effortless!</h1>
                </div>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<!-- Carousel end -->


<div class="row">
    <div class="d-flex justify-content-center col-md-12 form-signin">
        <section>
            <form id="account" method="post">
                <div class="text-center mb-4">
                    <h1 class="h1 mb-3 font-weight-bold text-dark">Login</h1>
                    <p>Fill in the Email and Password provided.</p>
                </div>
         
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-label-group">
                    <label class="text-dark font-weight-bold" for="inputUsername" asp-for="Input.Username"></label>
                    <input  asp-for="Input.Username" class="form-control" />
                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                </div>
                <div class="form-label-group">
                    <label class="text-dark font-weight-bold" for="inputPassword" asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <button class="btn btn-lg btn-primary btn-block submit_btn" type="submit">Sign in</button>

            </form>
        </section>
    </div>
</div>

<style>
</style>

<section>
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">

                </div>
                <div class="modal-body">
                    Succes.You have an account now on this WebSite.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>

</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

